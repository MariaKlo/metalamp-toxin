form.usual-room(action="#")
    include ../../form-elements/plugins/swiper/swiper.pug
    +swiper("swiper_second", "usual-room__img")(class="swiper")
    div.usual-room__wrap
      h1.usual-room__title №
        span 840
      p.usual-room__price 9 990&#x20bd;
        span в сутки
    div.usual-room__wrap_border
    div.usual-room__wrapper
      div.usual-room__source
      svg(class="gradient")
        linearGradient(x1="50%" y1="0%" x2="50%" y2="100%" id="grads-rooms")
          stop(offset="0%" style="stop-color:rgb(188,156,255);stop-opacity:1.00")
          stop(offset="100%" style="stop-color:rgb(139,164,249);stop-opacity:1.00")
        symbol(id="stars-rooms" viewBox="153 89 106 108")
          polygon(id="stars-shapes-rooms" stroke="url(#grads-rooms)" stroke-width="5" fill="currentColor" points="206 162.5 176.610737 185.45085 189.356511 150.407797 158.447174 129.54915 195.713758 130.842203 206 95 216.286242 130.842203 253.552826 129.54915 222.643489 150.407797 235.389263 185.45085")
      div.usual-room__wraps
        include ../../form-elements/buttons/rate-button/rate-button.pug
        +rate-button("stars-rooms", "fives-rooms", "#stars-rooms")
        +rate-button("stars-rooms", "fours-rooms", "#stars-rooms")
        +rate-button("stars-rooms", "threes-rooms", "#stars-rooms")
        +rate-button("stars-rooms", "seconds-rooms", "#stars-rooms")
        +rate-button("stars-rooms", "ones-rooms", "#stars-rooms")
      p.usual-room__comments 65
        span Отзывов     