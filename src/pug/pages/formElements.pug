  // dropdown с гостями
  div.guests
    h3.guests__info #{dropdown}
    input(type='text' name='dropdown' placeholder='Сколько гостей').guests__field
    h3.guests__title Rich Checkbox Buttons
    div.guests__checkbox-wrapper
      div.guests__checkbox
        input(type='checkbox' name='agreement' id='guests').guests__field-checkbox
        label(for='guests')
