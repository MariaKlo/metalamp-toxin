// переменные
- var textField = 'TEXT FILED'
- var dropdown = 'DROPDOWN'
// поля ввода
div.elements
  form(action='/new_movie' method='POST')
    div.elements__description
      h3.elements__info #{textField}
      p.elements__state DEFAULT 
    input(type='text' name='e-mail' placeholder='Email').elements__field
    div.elements__description
      h3.elements__info #{textField}
      p.elements__state HOVER/FOCUS 
    input(type='text' name='text' placeholder='This is pretty awesome').elements__field
    h3.elements__info #{dropdown}
    input(type='text' name='dropdown' placeholder='Сколько гостей').elements__field
    h3.elements__info MASKED #{textField}
    input(type='text' name='date' placeholder='ДД.ММ.ГГГГ').elements__field
    div.date-dropdown
      div.date-dropdown_before
        h3.elements__info DATE #{dropdown}
        input(type='text' name='date' placeholder='ДД.ММ.ГГГГ').elements__field-date
      div.date-dropdown_after
        h3.elements__info DATE #{dropdown}
        input(type='text' name='date' placeholder='19.08.2019').elements__field-date
    h3.elements__info FILTER DATE #{dropdown}
    input(type='text' name='date' placeholder='19 авг - 23 авг').elements__field-filter
    h3.elements__info SUBSCRIPTION #{textField}
    input(type='text' name='e-mail' placeholder='Email').elements__field-subscription
  // кнопки
  div.buttons
    div.checkbox-buttons
      h3.checkbox-buttons__name CHECKBOX BUTTONS
      div.checkbox-buttons__item
        input(type='checkbox' name='agreement' id='checkbox').checkbox-buttons__field
        label(for='checkbox')
        p.checkbox-buttons__option Можно курить
      div.checkbox-buttons__item
        input(type='checkbox' name='agreement' id='checkbox' checked).checkbox-buttons__field
        label(for='checkbox')
        p.checkbox-buttons__option Можно с питомцами
      div.checkbox-buttons__item
        input(type='checkbox' name='agreement' id='checkbox' checked).checkbox-buttons__field
        label(for='checkbox')
        p.checkbox-buttons__option Можно пригласить гостей (до 10 человек)
    div.radio-buttons
      h3.radio-buttons__name RADIO BUTTONS
      div.radio-buttons__wrapper
        input(type='radio' name='sex' value='Мужчина' id='sex' checked).radio-buttons__field
        label(for='sex') Мужчина
        input(type='radio' name='sex' value='Женщина' id='sex').radio-buttons__field
        label(for='sex') Женщина
    div.toggle-buttons
      h3.toggle-buttons__name TOGGLE
      div.toggle-buttons__wrapper
        div.toggle-buttons__wrap
          input(type='checkbox' name='news' value='Получать спецпредложения' id='toggle').toggle-buttons__field
          label(for='toggle' class='toggle__text') Получать спецпредложения
        div.toggle-buttons__wrap
          input(type='checkbox' name='news' value='Получать спецпредложения' id='toggle' checked).toggle-buttons__field
          label(for='toggle' class='toggle__text') Получать спецпредложения
    div.like-buttons
      h3.like-buttons__name LIKE BUTTON
      div.like-buttons__wrapper
        input(type='text' name='like' id='like' placeholder='2' value=2).like-buttons__field
        input(type='text' name='like' id='like' placeholder='12' value=12).like-buttons__field
    div.rate-buttons
      h3.rate-buttons__name RATE BUTTON
        div.rate-buttons__wrapper
          div.rate-buttons__wrap
            button(class='rate-buttons__button rate-buttons__button_first') &#9734
            button(class='rate-buttons__button rate-buttons__button_second') &#9734
            button(class='rate-buttons__button rate-buttons__button_third') &#9734
            button(class='rate-buttons__button rate-buttons__button_fourth') &#9734
            button(class='rate-buttons__button rate-buttons__button_fifth') &#9734
          div.rate-buttons__wrap
            button(class='rate-buttons__button rate-buttons__button_first') &#9734
            button(class='rate-buttons__button rate-buttons__button_second') &#9734
            button(class='rate-buttons__button rate-buttons__button_third') &#9734
            button(class='rate-buttons__button rate-buttons__button_fourth') &#9734
            button(class='rate-buttons__button rate-buttons__button_fifth') &#9734
  div.other-buttons
    div.range-button
      div.range-button__info
        h3.range-button__name RANGE SLIDER
        p.range-button__price 5000&#8381; - 10000&#8381;
      div.range-button__slider
    // кнопки + пагинация
    div.buttons
      h3.buttons__name BUTTONS
      div.ellipse-buttons
        button(class='ellipse-buttons__button ellipse-buttons_first') Click me
        button(class='ellipse-buttons__button ellipse-buttons_second') Click me
        button(class='ellipse-buttons__button ellipse-buttons_third') Click me
        button(class='ellipse-buttons__button ellipse-buttons_fourth') Click me
      div.link-buttons
