- var darkShade = 'Dark Shade'
- var shadesOfBlue = '#1F2041'
// цвета
div.logo 
  div.wrapper
    div.colors
      div.color
        div(class="rectangle rectangle_first")
        div.color__wrapper
          h2.english-name #{darkShade} 100%
          p.hex-name #{shadesOfBlue}
      div.color
        div(class="rectangle rectangle_second")
        div.color__wrapper
          h2.english-name #{darkShade} 75%
          p.hex-name #{shadesOfBlue}
      div.color
        div(class="rectangle rectangle_third")
        div.color__wrapper
          h2.english-name #{darkShade} 50%
          p.hex-name #{shadesOfBlue}
      div.color
        div(class="rectangle rectangle_fourth")
        div.color__wrapper
          h2.english-name #{darkShade} 25%
          p.hex-name #{shadesOfBlue}
      div.color
        div(class="rectangle rectangle_fifth")
        div.color__wrapper
          h2.english-name #{darkShade} 5%
          p.hex-name #{shadesOfBlue}
      div.color
        div(class="rectangle rectangle_sixth")
        div.color__wrapper
          h2.english-name Purple
          p.hex-name #BC9CFF 
      div.color
        div(class="rectangle rectangle_seventh")
        div.color__wrapper
          h2.english-name Green
          p.hex-name #6FCF97
        // шрифты, заголовки
    div.titles
      div(class="title title_first")
        span H1
        h1.title__name This one is the sub-section or widget title
      div(class="title title_second")
        span H2
        h2.title__name Next one is the item title inside widgets
      div(class="title title_third")
        span H3
        h3.title__name THIS IS A LABEL OR CTA TEXT
      div(class="title title_fourth")
        span Body
        p.title__name This is the body text which is used for most of the design, like paragraphs, lists, etc. 