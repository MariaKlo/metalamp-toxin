      div.book__wrap
        p.book__text Итого
        p.book__total-price 38 081&#x20bd;
    button(type="submit" class="book__btn")
  // sign-in
  form.sign-in(action="#")
    h1.sign-in__title Войти
    input(type="text" name="email" class="sign-in__input" placeholder="Email")
    input(type="text" name="password" class="sign-in__input" placeholder="Пароль")
    button(type="submit" class="sign-in__btn")
    div.sign-in__wrap
      p.sign-in__text Нет аккаунта на Toxin?
      button(type="submit" class="sign-in__btn_sign-up") Создать
