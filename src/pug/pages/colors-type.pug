- var darkShade = 'Dark Shade'
- var shadesOfBlue = '#1F2041'
// цвета
div.logo 
  div.wrapper
    div.colors
      mixin colors(normalNameOfColor, hexNameOfColor)
        div.color
          div.rectangle.rectangle_first
          div.color-wrapper
            h2.english-name= normalNameOfColor
            p.hex-name= hexNameOfColor
      +colors('Dark Shade 100%', '#1F2041')
      +colors('Dark Shade 75%', '#1F2041')
      +colors('Dark Shade 50%', '#1F2041')
      +colors('Dark Shade 25%', '#1F2041')
      +colors('Dark Shade 5%', '#1F2041')
      +colors('Purple', '#BC9CFF')
      +colors('Green', '#6FCF97')
