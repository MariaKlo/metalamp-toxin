extends ../../../layout/page.pug
block content
  include ../../../components/inputs/regular-input/regular-input.pug
  include ../../../components/plugins/item-quantity-dropdown/item-quantity-dropdown.pug
  include ../../../components/buttons/checkbox-button/checkbox-button.pug
  include ../../../components/buttons/radio-button/radio-button.pug
  include ../../../components/buttons/toggle-button/toggle-button.pug
  include ../../../components/buttons/like-button/like-button.pug
  include ../../../components/buttons/rate-button/rate-button.pug
  include ../../../components/plugins/range-slider/range-slider.pug
  include ../../../components/buttons/solid-button/solid-button.pug
  include ../../../components/buttons/transparent-button/transparent-button.pug
  include ../../../components/buttons/link-button/link-button.pug
  include ../../../components/plugins/pagination/pagination.pug
  include ../../../components/buttons/expandable-checkbox-list/expandable-checkbox-list.pug
  include ../../../components/bullet-list/bullet-list.pug
  include ../../../components/comment/comment.pug
  include ../../../components/feedback/feedback.pug

  // переменные
  - var textField = "TEXT FIELD"
  - var dropdown = "DROPDOWN"
  // поля ввода
  div.elements
    form(action="#")
      div.elements__description
        h3.elements__info #{textField}
        p.elements__state DEFAULT
      +input("email", "e-mail", "Email")(class="elements__field") 
      div.elements__description
        h3.elements__info #{textField}
        p.elements__state HOVER/FOCUS
      +input("text", "text", "This is pretty awesome")(class="elements__field") 
      h3.elements__info #{dropdown}
      +item-quantity-dropdown("iqdropdown_first", "Взрослые", "Дети", "Младенцы")(class="iqdropdown js-iqdropdown_first")
        div(class="iqdropdown-menu-btn-wrap")
          a(href="javascript:void(0);" class="iqdropdown-btn iqdropdown-btn-clear" id="iqdropdown-btn-clear") Очистить
          a(href="javascript:void(0);" class="iqdropdown-btn iqdropdown-btn-confirm" id="iqdropdown-btn-confirm") Применить
      h3.elements__info MASKED #{textField}
      input(type="text" name="date" placeholder="ДД.ММ.ГГГГ" class="elements__field js-datepicker_first" data-position="right top" id="datepicker_first")
      div.date-dropdown
        div.date-dropdown_before
          h3.elements__info DATE #{dropdown}
          div.elements__field-wrap-datepicker
            input(type="text" name="date" placeholder="ДД.ММ.ГГГГ" id="datepicker_second").elements__field-date.js-datepicker_second
        div.date-dropdown_after
          h3.elements__info DATE #{dropdown}
          div.elements__field-wrap-datepicker
            input(type="text" name="date" placeholder="19.08.2019" id="datepicker_third").elements__field-date.js-datepicker_third
      h3.elements__info FILTER DATE #{dropdown}
      div.elements__field-wrap-datepicker_short
        input(type="text" name="date" placeholder="19 авг - 23 авг" id="datepicker_fourth").elements__field-filter.js-datepicker_fourth
      h3.elements__info SUBSCRIPTION #{textField}
      div.elements__field-wrap
        +input("email", "e-mail", "Email")(class="elements__field-subscription")
    // кнопки
    div.buttons
      div.checkbox-button
        h3.checkbox-button__name CHECKBOX BUTTONS
        +checkbox-button("checkbox", "Можно курить")
        +checkbox-button("checkbox-second", "Можно с питомцами")
        +checkbox-button("checkbox-third", "Можно пригласить гостей (до 10 человек)") 
      div.radio-button
        h3.radio-button__name RADIO BUTTONS
        div.radio-button__wrapper
          +radio-button("sex-m", "Мужчина")
          +radio-button("sex-f", "Женщина")
      div.toggle-button
        h3.toggle-button__name TOGGLE
        div.toggle-button__wrapper
          +toggle-button()
          +toggle-button()
      div.like-buttons
        h3.like-buttons__name LIKE BUTTON
        div.like-buttons__wrapper
          +like-button("like-buttons__border js-like-buttons__border", "like-buttons__heart js-like-buttons__heart", "like-buttons__counter js-like-buttons__counter")
          +like-button("like-buttons__border_second-like-button js-like-buttons__border_second-like-button", "like-buttons__heart_second js-like-buttons__heart_second", "like-buttons__counter_second-like-button js-like-buttons__counter_second-like-button")
      div.rate-buttons
        h3.rate-buttons__name RATE BUTTON
        div.rate-buttons__wrapper
          div.rate-buttons__source
          svg.gradient
            linearGradient(x1="50%" y1="0%" x2="50%" y2="100%" id="grad")
              stop(offset="0%" style="stop-color:rgb(188,156,255);stop-opacity:1.00")
              stop(offset="100%" style="stop-color:rgb(139,164,249);stop-opacity:1.00")
            symbol(id="star" viewBox="153 89 106 108")
              polygon(id="star-shape" stroke="url(#grad)" stroke-width="5" fill="currentColor" points="206 162.5 176.610737 185.45085 189.356511 150.407797 158.447174 129.54915 195.713758 130.842203 206 95 216.286242 130.842203 253.552826 129.54915 222.643489 150.407797 235.389263 185.45085")
          div.rate-buttons__wrap
            +rate-button("star", "five", "#star")
            +rate-button("star", "four", "#star")
            +rate-button("star", "three", "#star")
            +rate-button("star", "two", "#star")
            +rate-button("star", "one", "#star")
          div.rate-buttons__source
          svg.gradient
            linearGradient(x1="50%" y1="0%" x2="50%" y2="100%" id="grads")
              stop(offset="0%" style="stop-color:rgb(188,156,255);stop-opacity:1.00")
              stop(offset="100%" style="stop-color:rgb(139,164,249);stop-opacity:1.00")
            symbol(id="stars" viewBox="153 89 106 108")
              polygon(id="stars-shapes" stroke="url(#grads)" stroke-width="5" fill="currentColor" points="206 162.5 176.610737 185.45085 189.356511 150.407797 158.447174 129.54915 195.713758 130.842203 206 95 216.286242 130.842203 253.552826 129.54915 222.643489 150.407797 235.389263 185.45085")
          div.rate-buttons__wrap
            +rate-button("stars", "fives", "#stars")
            +rate-button("stars", "fours", "#stars")
            +rate-button("stars", "threes", "#stars")
            +rate-button("stars", "twos", "#stars")
            +rate-button("stars", "ones", "#stars")
    div.other-buttons
      div.range-button
        div.range-button__info
          +range-slider("range slider")
      // кнопки + пагинация
      div.buttons
        h3.buttons__name BUTTONS
        div.ellipse-buttons
          div.ellipse-buttons__wrap
            +ellipse-button-solid()
            +ellipse-button-solid()
          div.ellipse-buttons__wrap
            +ellipse-button-transparent()
            +ellipse-button-transparent()
        div.link-button
          +link-button()
          +link-button()
        include ../../../components/buttons/solid-big-button/solid-big-button.pug
      div.pagination
        h3.pagination__name PAGINATION
        +pagination()
  // фильтры по поиску номеров
  div.elements__filter    
    div.filter
      div.filter__description
        h3.filter__info #{dropdown}
        p.filter__state DEFAULT
      +item-quantity-dropdown("iqdropdown_sixth", "Спальни", "Кровати", "Ванные комнаты")(class="iqdropdown js-iqdropdown_sixth")
      div.filter__description
        h3.filter__info #{dropdown}
        p.filter__state EXPANDED
      +item-quantity-dropdown("iqdropdown_seventh", "Спальни", "Кровати", "Ванные комнаты")(class="iqdropdown js-iqdropdown_seventh")
      div.filter__checkbox_expanded
        div.expandable-checkbox-list__checkbox-list.js-expandable-checkbox-list__checkbox-list Expandable checkbox list
          i.expandable-checkbox-list__checkbox-list-arrow_first.js-expandable-checkbox-list__checkbox-list-arrow_first
          +expandable-checkbox-list("Завтрак", "expandable-checkbox-list")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_first js-expandable-checkbox-list__checkbox_first")
          +expandable-checkbox-list("Письменный стол", "expandable-checkbox-list_second")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_second js-expandable-checkbox-list__checkbox_second")
          +expandable-checkbox-list("Стул для кормления", "expandable-checkbox-list_third")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_third js-expandable-checkbox-list__checkbox_third")
          +expandable-checkbox-list("Кроватка", "expandable-checkbox-list_fourth")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_fourth js-expandable-checkbox-list__checkbox_fourth")
          +expandable-checkbox-list("Телевизор", "expandable-checkbox-list_fifth")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_fifth js-expandable-checkbox-list__checkbox_fifth")
          +expandable-checkbox-list("Шампнуь", "expandable-checkbox-list_sixth")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_sixth js-expandable-checkbox-list__checkbox_sixth")
        div.expandable-checkbox-list__checkbox-list_second.js-expandable-checkbox-list__checkbox-list_second Expandable checkbox list
          i.expandable-checkbox-list__checkbox-list-arrow_second.js-expandable-checkbox-list__checkbox-list-arrow_second
          +expandable-checkbox-list("Завтрак", "expandable-checkbox-list_seventh")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_seventh js-expandable-checkbox-list__checkbox_seventh")
          +expandable-checkbox-list("Письменный стол", "expandable-checkbox-list_eighth")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_eighth js-expandable-checkbox-list__checkbox_eighth")
          +expandable-checkbox-list("Стул для кормления", "expandable-checkbox-list_ninth")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_ninth js-expandable-checkbox-list__checkbox_ninth")
          +expandable-checkbox-list("Кроватка", "expandable-checkbox-list_tenth")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_tenth js-expandable-checkbox-list__checkbox_tenth")
          +expandable-checkbox-list("Телевизор", "expandable-checkbox-list_eleventh")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_eleventh js-expandable-checkbox-list__checkbox_eleventh")
          +expandable-checkbox-list("Шампнуь", "expandable-checkbox-list_twelfth")(class="expandable-checkbox-list__checkbox expandable-checkbox-list__checkbox_twelfth js-expandable-checkbox-list__checkbox_twelfth")
    // dropdown с гостями
    div.guests
      h3.guests__info #{dropdown}
      +item-quantity-dropdown("iqdropdown_second", "Взрослые", "Дети", "Младенцы")(class="iqdropdown js-iqdropdown_second")
        div(class="iqdropdown-menu-btn-wrap")
          a(href="javascript:void(0);" class="iqdropdown-btn iqdropdown-btn-clear" id="iqdropdown-btn-clear") Очистить
          a(href="javascript:void(0);" class="iqdropdown-btn iqdropdown-btn-confirm" id="iqdropdown-btn-confirm") Применить
      h3.guests__title Rich Checkbox Buttons
      div.guests__checkbox-wrapper
        div.checkbox-button__item
          input(type="checkbox" name="agreement" id="guests").checkbox-button__field
          label(for="guests")
          div.guests__checkbox-wrap
            p.guests__option-title Широкий коридор
            p.guests__option-text Ширина коридоров в номере не менее 91 см.
        div.checkbox-button__item
          input(type="checkbox" name="agreement" id="guests__second").checkbox-button__field
          label(for="guests__second")
          div.guests__checkbox-wrap
            p.guests__option-title Помощник для инвалидов
            p.guests__option-text На 1 этаже вас встретит специалист  и проводит до номера.
    // dropdown и списки
    div.lists
      h3.lists__info #{dropdown}
      +item-quantity-dropdown("iqdropdown_third", "Взрослые", "Дети", "Младенцы")(class="iqdropdown js-iqdropdown_third")
        div(class="iqdropdown-menu-btn-wrap")
          a(href="javascript:void(0);" class="iqdropdown-btn iqdropdown-btn-clear" id="iqdropdown-btn-clear") Очистить
          a(href="javascript:void(0);" class="iqdropdown-btn iqdropdown-btn-confirm" id="iqdropdown-btn-confirm") Применить
      h3.bullet-list__title Bullet list
      ul.bullet-list__bullet
      +bullet-list("Нельзя с питомцами")
      +bullet-list("Без вечеринок и мероприятий")
      +bullet-list("Время прибытия — после 13:00, а выезд до 12:00")
  // комментарии
  div.elements__comments
    div.comments
      +comment("Комфорт", "Шумопоглащающие стены")(class="comment__img")
      +comment("Удобство", "Окно в каждой из спален")(class="comment__img_second")
    +feedback("Мурад Сарафанов", "5 дней назад", "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.")
